// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model drug_provider {
  id            String   @id @default(uuid()) @db.Uuid
  incorp_number String   @unique // incorporation number, legal stuffs
  phone_number  Int      @unique
  name          String
  town          String
  areas         String // quatiers in French
  address       String?
  Drug          drug[]
  Supply        supply[]
}

model drug_form {
  id   Int    @id @default(autoincrement())
  name String
  Drug drug[]
}

model drug_category {
  id   Int    @id @default(autoincrement())
  name String
  Drug drug[]
}

model drug {
  id             String         @id @default(uuid()) @db.Uuid
  name           String         @unique
  dosage         Int // microgrammes
  price          Float
  description    String?
  fab_date       DateTime
  exp_date       DateTime
  quantity       Int
  size           Int // Like "60 pills, 200 ml" - it's like a volume
  photos         drug_photo[]
  drug_form      drug_form       @relation(fields: [drugFormId], references: [id])
  drug_provider  drug_provider[]
  categories     drug_category   @relation(fields: [drugCategoryId], references: [id])
  purchases      purchase[]
  Supply         supply[]
  drugFormId     Int
  drugCategoryId Int
  movement       movement[]
}

model movement {
  id       String   @id @default(uuid()) @db.Uuid
  date     DateTime
  quantity Int // if the number is positive, supply, else, purchase
  Drug     drug    @relation(fields: [drugId], references: [id])
  drugId   String  @db.Uuid
}

model mustomer {
  id          String     @id @default(uuid()) @db.Uuid
  phoneNumber Int        @unique
  firstName   String
  lastName    String
  town        String
  addreas     String // quatiers in French
  address     String?
  Purchases   purchase[]
}

model purchase {
  id         String   @id @default(uuid()) @db.Uuid
  quantity   Int
  drug       drug     @relation(fields: [drugId], references: [id])
  drugId     String   @db.Uuid
  customer   mustomer @relation(fields: [customerId], references: [id])
  customerId String   @db.Uuid
}

model supply {
  id             String       @id @default(uuid()) @db.Uuid
  quantity       Int
  drug           drug         @relation(fields: [drugId], references: [id])
  drugId         String       @db.Uuid
  drugProvider   drug_provider @relation(fields: [drugProviderId], references: [id])
  drugProviderId String       @db.Uuid
}

model drug_photo {
  id     String @id @default(uuid()) @db.Uuid
  url    String @unique
  size   Int
  drug   drug   @relation(fields: [drugId], references: [id])
  drugId String @db.Uuid
}
